#include <stdio.h>
int main() {
    int a[50], n, i, pos, val;
    printf("Enter n: ");
    scanf("%d",&n);
    printf("Enter elements: ");
    for(i=0;i<n;i++) scanf("%d",&a[i]);
    // Insert
    printf("Enter pos & val to insert: ");
    scanf("%d%d",&pos,&val);
    for(i=n;i>pos;i--) a[i]=a[i-1];
    a[pos]=val; n++;
    // Delete
    printf("Enter pos to delete: ");
    scanf("%d",&pos);
    for(i=pos;i<n-1;i++) a[i]=a[i+1];
    n--;
    // Display
    printf("Array: ");
    for(i=0;i<n;i++) printf("%d ",a[i]);
}
